двоичный калькулятор

#include <iostream>
#include <math.h>
#include <locale.h>
#include <cmath>
using namespace std;

int main()
{
setlocale(LC_ALL, "RUS");		//русский язык
int i=1,n=20,k=0;			//n - максимум символов, i - счёт действий, k - для записи нуля
int mas[100];				//хранение действий
int x=0,num1,num2,n1,n2;		//num1/2 - введённые числа, n1/2 - остатки, x - число в уме
cout<<"Первое число:\n";
cin>>num1;
cout<<"Второе число:\n";
cin>>num2;
do
{
n1=num1%10;				//получичть остаток для сложения
num1=num1/10;				//следующий разряд
n2=num2%10;
num2=num2/10;
if (n1==0 && n2==0 && x==0)				//заполняю условия по принципу таблицы истинности
{
mas[n]=0;				//запомнить число
n=n-1;					//следующее число
i=i+1;					//следующий шаг
}
else if (n1==1 && n2==0 && x==0)
{
mas[n]=1;				//запомнить число
n=n-1;
i=i+1;
}
else if (n1==0 && n2==1 && x==0)
{
mas[n]=1;
n=n-1;
i=i+1;
}
else if (n1==1 && n2==1 && x==0)
{
mas[n]=0;
n=n-1;
x=x+1;					//"число в уме"
i=i+1;
}
else if (n1==0 && n2==0 && x==1)
{
mas[n]=1;
n=n-1;
x=x-1;					//"число в уме" снова ноль
i=i+1;
}
else if (n1==1 && n2==0 && x==1)
{
mas[n]=0;
n=n-1;
i=i+1;
}
else if (n1==0 && n2==1 && x==1)
{
mas[n]=0;
n=n-1;
i=i+1;
}
else if (n1==1 && n2==1 && x==1)
{
mas[n]=1;
n=n-1;
i=i+1;
}
}
while(i<=20);				//кол-во действий не больше допустимого
cout << "Ответ: " << endl;
for (i=1;i<=20;i++)			//выдача чисел из массива / проверка элементов
{
if(mas[i]==0 && k!=1)				//ячейка не использовалась
{
continue;
k=0;
}
else if (mas[i]==1)				//в ячейке есть "число в уме"
{
k=1;
cout<<mas[i];
}
else if (mas[i]==1 || mas[i]==0 && k==1)	//в ячейке есть результат
cout<<mas[i];
}
return 0;
}
